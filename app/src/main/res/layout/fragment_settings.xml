<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white">

    <!-- TÃ­tulo de la pantalla -->
    <TextView
        android:id="@+id/title"
        style="@style/FragmentTitleStyle"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="@string/btnSettings"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenedor vertical para texto + switch -->
    <LinearLayout
        android:id="@+id/music_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.155">

        <TextView
            android:id="@+id/music_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alexandria_bold"
            android:text="@string/setting_music"
            android:textSize="25sp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:checked="true"
            android:scaleX="1.6"
            android:scaleY="1.6"
            app:thumbTint="@color/switch_thumb_tint"
            app:trackTint="@color/switch_track_tint"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderVolume"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            android:value="25"
            android:valueFrom="0"
            android:valueTo="100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/swMusic"
            app:thumbColor="@color/slider_thumb_tint"
            app:trackColorActive="@color/slider_track_active_tint"
            app:trackColorInactive="@color/slider_track_inactive_tint"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
